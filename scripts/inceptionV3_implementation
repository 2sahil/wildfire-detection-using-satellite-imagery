!pip install -q --upgrade tensorflow


import numpy as np
import tensorflow as tf
from tensorflow.keras.applications.inception_v3 import InceptionV3, preprocess_input, decode_predictions
from tensorflow.keras.preprocessing import image

# Load the InceptionV3 model
model = InceptionV3(weights='imagenet')


from google.colab import files
uploaded = files.upload()
image_path = next(iter(uploaded.keys()))


def load_and_preprocess_image(img_path):
    img = image.load_img(img_path, target_size=(299, 299))  #Resize
    img_array = image.img_to_array(img)  # Convert to array form
    img_array_expanded = np.expand_dims(img_array, axis=0)  #Expand to include batch dimension
    return preprocess_input(img_array_expanded)  # Preprocess


def predict_image(model, img_path):
    processed_image = load_and_preprocess_image(img_path)
    predictions = model.predict(processed_image)
    return decode_predictions(predictions, top=3)[0]  # Get the top-3 predictions

#example
predictions = predict_image(model, image_path)
for prediction in predictions:
    print(prediction)
